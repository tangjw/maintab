<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zonsim.maintab.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_layout"
        android:background="#5390">

    </FrameLayout>


    <com.zonsim.maintab.widget.BottomNavLayout
        android:id="@+id/bottom_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FAFBFE">

        <com.zonsim.maintab.widget.BottomNavItemView
            android:id="@+id/bottom_nav_item_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/main_nav_name_1"
            app:checked_src="@drawable/ic_main_nav_1_1"
            app:normal_src="@drawable/ic_main_nav_1_0"/>

        <com.zonsim.maintab.widget.BottomNavItemView
            android:id="@+id/bottom_nav_item_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/main_nav_name_2"
            app:checked_src="@drawable/ic_main_nav_2_1"
            app:normal_src="@drawable/ic_main_nav_2_0"/>

        <com.zonsim.maintab.widget.BottomNavItemView
            android:id="@+id/bottom_nav_item_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/main_nav_name_3"
            app:checked_src="@drawable/ic_main_nav_3_1"
            app:normal_src="@drawable/ic_main_nav_3_0"/>


    </com.zonsim.maintab.widget.BottomNavLayout>

</RelativeLayout>
